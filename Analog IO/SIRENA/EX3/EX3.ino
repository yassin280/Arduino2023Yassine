//********** Setup ****************************************************************
void setup()
{
pinMode(xiulet, OUTPUT); // definir el pin 9 com una sortida
}
//********** Loop *****************************************************************
void loop()
{
  tone(xiulet, 150, 1000);
  delay(1000+500); 
  tone(xiulet, 300, 1000); 
  delay(1000+500); 
  tone(xiulet, 600, 1000);
  delay(1000+500);
  tone(xiulet, 400, 1000);
  delay(1000+2000); 
}
